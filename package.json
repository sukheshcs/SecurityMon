{
  "name": "security-mon",
  "private": true,
  "version": "1.95.0",
  "description": "Professional System Monitoring & Active Defense Tool. Monitor network connections, startup apps, and system health.",
  "author": {
    "name": "Sukhesh",
    "email": "sukheshcs@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sukhesh/SecurityMon"
  },
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.sukhesh.securitymon",
    "compression": "store",
    "productName": "SecurityMon",
    "copyright": "Copyright Â© 2024 Sukhesh",
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "icon": "resources/icon.ico",
    "directories": {
      "output": "dist-out"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "chokidar": "^4.0.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.0.0",
    "vite": "^5.3.0",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}